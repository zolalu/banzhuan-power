    <!-- 页脚 -->
    <footer class="relative py-10 overflow-hidden">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <div class="text-xl font-bold text-gradient mb-4">板砖</div>
                <p class="text-gray-400 mb-6">面向未来的AI产品经理</p>
                <div class="flex justify-center space-x-4">
                    <a href="#hero" class="text-gray-400 hover:text-white transition-colors">首页</a>
                    <a href="#about" class="text-gray-400 hover:text-white transition-colors">关于我</a>
                    <a href="#experience" class="text-gray-400 hover:text-white transition-colors">经历</a>
                    <a href="#portfolio" class="text-gray-400 hover:text-white transition-colors">作品集</a>
                    <a href="#skills" class="text-gray-400 hover:text-white transition-colors">技能</a>
                    <a href="#blog" class="text-gray-400 hover:text-white transition-colors">博客</a>
                </div>
                <div class="mt-8 text-sm text-gray-500">
                    &copy; 2024 版权所有
                </div>
            </div>
        </div>

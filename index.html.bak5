    <script>
        // 等待DOM加载完成
        document.addEventListener('DOMContentLoaded', function() {
            // 获取元素
            const themeToggle = document.getElementById('theme-toggle');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const mainNav = document.getElementById('mainNav');
            const scrollIndicator = document.getElementById('scrollIndicator');
            const typingText = document.getElementById('typingText');
            const sections = document.querySelectorAll('section');
            const timelineItems = document.querySelectorAll('.timeline-item');
            const timelineExpandBtns = document.querySelectorAll('.timeline-expand-btn');
            const skillProgress = document.querySelectorAll('.skill-progress');
            const portfolioFilters = document.querySelectorAll('.portfolio-filter');
            const portfolioItems = document.querySelectorAll('.portfolio-item');
            
            // 检查系统暗色模式偏好
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.documentElement.classList.add('dark');
            }
            
            // 切换暗色模式
            themeToggle.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
            });
            
            // 移动端菜单
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            // 滚动事件处理
            window.addEventListener('scroll', () => {
                // 更新滚动指示器
                const scrollTop = document.documentElement.scrollTop || document.body.scrollTop;
                const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                const scrolled = (scrollTop / scrollHeight) * 100;
                scrollIndicator.style.width = scrolled + '%';
                
                // 导航栏背景变化
                if (scrollTop > 50) {
                    mainNav.classList.add('nav-scrolled');
                } else {
                    mainNav.classList.remove('nav-scrolled');
                }
                
                // 视差效果
                const parallaxElements = document.querySelectorAll('.parallax-bg');
                parallaxElements.forEach(element => {
                    const speed = 0.5;
                    element.style.transform = `translateY(${scrollTop * speed}px)`;
                });
                
                // 检查元素是否在视口中
                sections.forEach(section => {
                    const rect = section.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.75 &&
                        rect.bottom >= 0
                    );
                    
                    if (isInViewport) {
                        section.classList.add('active');
                        section.classList.add('visible');
                        // 激活对应的导航链接
                        const id = section.getAttribute('id');
                        document.querySelectorAll('nav a').forEach(link => {
                            if (link.getAttribute('href') === `#${id}`) {
                                link.classList.add('text-gradient');
                            } else {
                                link.classList.remove('text-gradient');
                            }
                        });
                    }
                });
                
                // 时间线动画
                timelineItems.forEach(item => {
                    const rect = item.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                        rect.bottom >= 0
                    );
                    
                    if (isInViewport) {
                        item.classList.add('visible');
                    }
                });
                
                // 所有技能进度条动画
                document.querySelectorAll('.skill-progress').forEach(progress => {
                    const rect = progress.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                        rect.bottom >= 0
                    );
                    
                    if (isInViewport) {
                        const progressValue = progress.getAttribute('data-progress');
                        progress.style.width = progressValue;
                    }
                });
                
                // 技能卡片动画
                document.querySelectorAll('.skill-category-card').forEach((card, index) => {
                    const rect = card.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                        rect.bottom >= 0
                    );
                    
                    if (isInViewport) {
                        card.style.transitionDelay = `${index * 0.1}s`;
                        card.classList.add('visible');
                    }
                });
                
                // 工具项动画
                document.querySelectorAll('.tool-item').forEach((tool, index) => {
                    const rect = tool.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                        rect.bottom >= 0
                    );
                    
                    if (isInViewport) {
                        tool.style.transitionDelay = `${index * 0.1}s`;
                        tool.classList.add('visible');
                    }
                });
                
                // 显示其他模块的转场动画
                document.querySelectorAll('.section-transition').forEach(element => {
                    const rect = element.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85
                    );
                    
                    if (isInViewport) {
                        element.classList.add('visible');
                    }
                });
            });
            
            // 添加粒子效果
            createParticles();
            
            // 添加打字机效果
            typeText(typingText, 'AI产品经理', 100);
            
            // 为软技能标签添加交错动画效果
            document.querySelectorAll('.soft-skill-tag').forEach((tag, index) => {
                tag.style.setProperty('--tag-index', index);
            });
            
            // 为兴趣爱好图标添加交错动画效果
            document.querySelectorAll('.interest-item').forEach((item, index) => {
                item.style.setProperty('--item-index', index);
                item.style.animationDelay = `${index * 0.1}s`;
            });
            
            // 为关于我内容卡片添加可见性动态效果
            window.addEventListener('scroll', () => {
                const aboutContentCard = document.querySelector('.about-content-card');
                if (aboutContentCard) {
                    const rect = aboutContentCard.getBoundingClientRect();
                    const isInViewport = (
                        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                        rect.bottom >= 0
                    );
                    
                    if (isInViewport) {
                        aboutContentCard.classList.add('visible');
                    }
                }
            });
            
            // 作品集过滤功能
            portfolioFilters.forEach(filter => {
                filter.addEventListener('click', function() {
                    // 移除所有活跃状态
                    portfolioFilters.forEach(f => f.classList.remove('active'));
                    // 添加当前活跃状态
                    this.classList.add('active');
                    
                    // 获取过滤类别
                    const filterValue = this.getAttribute('data-filter');
                    
                    // 过滤作品
                    portfolioItems.forEach(item => {
                        if (!filterValue || filterValue === 'all' || item.getAttribute('data-category') === filterValue) {
                            item.style.display = 'block';
                            setTimeout(() => {
                                item.style.opacity = 1;
                                item.style.transform = 'scale(1)';
                            }, 10);
                        } else {
                            item.style.opacity = 0;
                            item.style.transform = 'scale(0.8)';
                            setTimeout(() => {
                                item.style.display = 'none';
                            }, 300);
                        }
                    });
                });
            });
            
            // 触发初始滚动事件以激活可见元素
            window.dispatchEvent(new Event('scroll'));
        });
        
        // 创建粒子效果
        function createParticles() {
            const particles = document.querySelector('.particles');
            if (!particles) return;
            
            // 清空已有粒子
            particles.innerHTML = '';
            
            for (let i = 0; i < 40; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // 随机位置
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // 随机大小
                const size = Math.random() * 5 + 2;
                
                // 随机颜色
                const colors = ['#FFD58C', '#F55654', '#F99551', '#91B87C', '#9B4DCA', '#427C80'];
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                // 随机动画延迟
                const delay = Math.random() * 5;
                const duration = Math.random() * 10 + 10;
                
                // 设置样式
                particle.style.cssText = `
                    top: ${y}%;
                    left: ${x}%;
                    width: ${size}px;
                    height: ${size}px;
                    background-color: ${color};
                    opacity: ${Math.random() * 0.6 + 0.2};
                    filter: blur(${Math.random() * 2}px);
                    animation: float ${duration}s ease-in-out infinite;
                    animation-delay: -${delay}s;
                `;
                
                particles.appendChild(particle);
            }
        }
        
        // 打字机效果
        function typeText(element, text, speed) {
            let i = 0;
            element.textContent = '';
            
            function type() {
                if (i < text.length) {
                    element.textContent += text.charAt(i);
                    i++;
                    setTimeout(type, speed);
                }
            }
            
            setTimeout(type, 1000); // 延迟开始
        }
        
        // 浮动动画样式
        const floatStyle = document.createElement('style');
        floatStyle.textContent = `
            @keyframes float {
                0%, 100% {
                    transform: translateY(0) translateX(0);
                }
                25% {
                    transform: translateY(-15px) translateX(10px);
                }
                50% {
                    transform: translateY(-30px) translateX(-10px);
                }
                75% {
                    transform: translateY(-15px) translateX(5px);
                }
            }
            
            .bg-grid-pattern {
                background-image: 
                    radial-gradient(circle, rgba(148, 93, 202, 0.1) 2px, transparent 2px),
                    radial-gradient(circle, rgba(148, 93, 202, 0.1) 2px, transparent 2px);
                background-size: 30px 30px;
                background-position: 0 0, 15px 15px;
            }
            
            .portfolio-filter.active {
                background-color: #f97316;
                color: white;
            }
            
            .dark .portfolio-filter.active {
                background-color: #ea580c;
                color: white;
            }
            
            .skill-progress {
                width: 0;
                transition: width 1.5s ease-in-out;
            }
            
            .portfolio-item {
                transition: all 0.3s ease-out;
            }
        `;
        document.head.appendChild(floatStyle);
        
        // 卡片堆叠交互效果 - 优化版
        const cardStacks = document.querySelectorAll('.card-stack');
        
        cardStacks.forEach(stack => {
            const cards = Array.from(stack.querySelectorAll('.card-stack-item'));
            if (cards.length <= 1) return; // 如果只有一张卡片，不添加拖拽功能
            
            cards.forEach(card => {
                let isDragging = false;
                let startY = 0;
                let currentY = 0;
                let rafId = null;
                
                // 鼠标/触摸事件处理
                card.addEventListener('mousedown', startDrag);
                card.addEventListener('touchstart', e => {
                    const touch = e.touches[0];
                    startDrag({ clientY: touch.clientY });
                });
                
                window.addEventListener('mousemove', dragThrottled);
                window.addEventListener('touchmove', e => {
                    if (!isDragging) return;
                    e.preventDefault();
                    const touch = e.touches[0];
                    dragThrottled({ clientY: touch.clientY });
                }, { passive: false });
                
                window.addEventListener('mouseup', endDrag);
                window.addEventListener('touchend', endDrag);
                
                function startDrag(e) {
                    // 只有顶部卡片可以拖动
                    if (cards.indexOf(card) !== 0) return;
                    
                    isDragging = true;
                    startY = e.clientY;
                    currentY = 0;
                    card.classList.add('dragging');
                    
                    // 禁止文本选择
                    document.body.style.userSelect = 'none';
                }
                
                function dragThrottled(e) {
                    if (!isDragging) return;
                    
                    // 使用requestAnimationFrame优化性能
                    if (rafId) return;
                    
                    rafId = requestAnimationFrame(() => {
                        drag(e);
                        rafId = null;
                    });
                }
                
                function drag(e) {
                    if (!isDragging) return;
                    
                    currentY = e.clientY - startY;
                    
                    // 限制只能向下拖动一定距离
                    if (currentY < 0) currentY = 0;
                    if (currentY > 200) currentY = 200;
                    
                    // 应用变换
                    card.style.transform = `translateY(${currentY}px)`;
                    
                    // 如果拖动超过阈值，显示下一张卡片的内容预览
                    if (currentY > 70 && cards.length > 1) {
                        // 下一张卡片的内容渐显
                        const nextCard = cards[1];
                        const title = nextCard.querySelector('.card-title');
                        const desc = nextCard.querySelector('.card-description');
                        const tags = nextCard.querySelector('.card-tags');
                        const link = nextCard.querySelector('.card-link');
                        
                        const progress = Math.min((currentY - 70) / 80, 1); // 0 to 1
                        
                        title.style.opacity = progress;
                        title.style.transform = `translateY(${20 * (1 - progress)}px)`;
                        
                        desc.style.opacity = progress;
                        desc.style.transform = `translateY(${20 * (1 - progress)}px)`;
                        
                        tags.style.opacity = progress;
                        tags.style.transform = `translateY(${20 * (1 - progress)}px)`;
                        
                        if (link) {
                            link.style.opacity = progress;
                            link.style.transform = `translateY(${20 * (1 - progress)}px)`;
                        }
                    }
                }
                
                function endDrag() {
                    if (!isDragging) return;
                    
                    isDragging = false;
                    card.classList.remove('dragging');
                    
                    // 还原文本选择
                    document.body.style.userSelect = '';
                    
                    // 如果拖动距离足够大，切换卡片
                    if (currentY > 120 && cards.length > 1) {
                        cycleCards(stack);
                    } else {
                        // 否则回到原位
                        card.style.transform = '';
                        
                        // 重置下一张卡片的内容样式
                        if (cards.length > 1) {
                            const nextCard = cards[1];
                            const title = nextCard.querySelector('.card-title');
                            const desc = nextCard.querySelector('.card-description');
                            const tags = nextCard.querySelector('.card-tags');
                            const link = nextCard.querySelector('.card-link');
                            
                            title.style.opacity = '';
                            title.style.transform = '';
                            
                            desc.style.opacity = '';
                            desc.style.transform = '';
                            
                            tags.style.opacity = '';
                            tags.style.transform = '';
                            
                            if (link) {
                                link.style.opacity = '';
                                link.style.transform = '';
                            }
                        }
                    }
                }
            });
            
            // 添加自动循环展示
            let autoplayInterval;
            
            function startAutoplay() {
                if (cards.length <= 1) return;
                autoplayInterval = setInterval(() => {
                    cycleCards(stack);
                }, 5000);
            }
            
            function stopAutoplay() {
                clearInterval(autoplayInterval);
            }
            
            stack.addEventListener('mouseenter', stopAutoplay);
            stack.addEventListener('mouseleave', startAutoplay);
            stack.addEventListener('touchstart', stopAutoplay);
            
            startAutoplay();
        });
        
        // 循环切换卡片 - 优化版
        function cycleCards(stack) {
            const cards = Array.from(stack.querySelectorAll('.card-stack-item'));
            if (cards.length <= 1) return;
            
            // 第一张卡片移到末尾
            const firstCard = cards[0];
            
            // 创建一个克隆来执行动画，避免闪烁
            const clone = firstCard.cloneNode(true);
            clone.style.position = 'absolute';
            clone.style.zIndex = '10';
            clone.style.transition = 'all 0.5s ease';
            stack.appendChild(clone);
            
            // 动画结束后移除克隆
            setTimeout(() => {
                clone.style.transform = 'translateY(100px) scale(0.8)';
                clone.style.opacity = '0';
                
                setTimeout(() => {
                    clone.remove();
                    
                    // 重置所有卡片样式
                    cards.forEach(card => {
                        card.style.transform = '';
                        
                        const title = card.querySelector('.card-title');
                        const desc = card.querySelector('.card-description');
                        const tags = card.querySelector('.card-tags');
                        const link = card.querySelector('.card-link');
                        
                        if (title) title.style.opacity = '';
                        if (title) title.style.transform = '';
                        
                        if (desc) desc.style.opacity = '';
                        if (desc) desc.style.transform = '';
                        
                        if (tags) tags.style.opacity = '';
                        if (tags) tags.style.transform = '';
                        
                        if (link) {
                            link.style.opacity = '';
                            link.style.transform = '';
                        }
                    });
                }, 500);
                
                // 实际移动第一张卡片到末尾
                stack.appendChild(firstCard);
            }, 50);
        }
        
        // 触发初始滚动事件以激活可见元素
        window.dispatchEvent(new Event('scroll'));
    </script>
